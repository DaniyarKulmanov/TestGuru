<%= form_with(model: [@question, answer_set], local: true) do |form| %>
    <%= render 'shared/errors', resource: @answer %>

    <p>
      <%= form.label :body %><br>
      <%= form.text_area :body %>
    </p>

    <p>
      <%= form.label :correct %><br>
      <%= form.check_box :correct %>
    </p>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
