<table>
  <tr>
    <th align="left">Questions:</th>
  </tr>
  <% @test.questions.each do |question| %>
      <tr>
        <td><%= question.body %></td>
        <td><%= link_to 'Show', [question.test, question] %></td>
        <td><%= link_to 'Edit', edit_test_question_path(question.test, question) %></td>
        <td><%= link_to 'Delete',[question.test, question],
                        method: :delete,
                        data: { confirm: 'Are you sure?!'}%></td>
      </tr>
  <% end %>
</table>
