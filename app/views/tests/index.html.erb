<h1>All tests</h1>
<p>
<%= link_to 'Create new test', new_test_path %>
</p>
<table>
  <tr>
    <th>Author</th>
    <th>title</th>
    <th>level</th>
    <th>category</th>
    <th></th>
  </tr>

  <% @tests.each do |test| %>
      <tr>
        <td><%= user_name test %></td>
        <td><%= test.title %></td>
        <td><%= test.level %></td>
        <td><%= test.category.title %></td>
        <td><%= link_to 'Show', test_path(test) %></td>
        <td><%= link_to 'Edit', edit_test_path(test) %></td>
      </tr>
  <% end %>
</table>
